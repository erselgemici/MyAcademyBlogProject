@model Blogy.Business.DTOs.UserDtos.RegisterDto
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="d-flex align-items-center min-vh-100" style="background-color: #f0f2f5;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">

                <div class="card shadow-lg border-0" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <div class="text-center mb-4">
                            <h3 class="font-weight-bold text-dark" style="letter-spacing: 1px;">Hesap Oluştur</h3>
                            <p class="text-muted small">Blogy dünyasına katılmak için bilgilerinizi girin</p>
                        </div>

                        <form method="post">

                            <div class="row g-2 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label text-secondary fw-bold small">Adınız</label>
                                    <input type="text" class="form-control form-control-lg bg-light border-0" asp-for="FirstName" placeholder="Ad" required style="font-size:0.95rem;" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-secondary fw-bold small">Soyadınız</label>
                                    <input type="text" class="form-control form-control-lg bg-light border-0" asp-for="LastName" placeholder="Soyad" required style="font-size:0.95rem;" />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-secondary fw-bold small">Kullanıcı Adı</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-user text-muted"></i></span>
                                    <input type="text" class="form-control form-control-lg bg-light border-0" asp-for="UserName" placeholder="Kullanıcı adı seçin" required />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-secondary fw-bold small">Email Adresi</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-envelope text-muted"></i></span>
                                    <input type="email" class="form-control form-control-lg bg-light border-0" asp-for="Email" placeholder="ornek@email.com" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="row g-2 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label text-secondary fw-bold small">Şifre</label>
                                    <input type="password" class="form-control form-control-lg bg-light border-0" asp-for="Password" placeholder="******" required />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-secondary fw-bold small">Şifre Tekrar</label>
                                    <input type="password" class="form-control form-control-lg bg-light border-0" asp-for="ConfirmPassword" placeholder="******" required />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="text-danger mb-3 small text-center">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger list-unstyled" })
                            </div>

                            <button class="btn btn-primary btn-lg w-100 mb-3 shadow-sm" type="submit" style="border-radius: 0.5rem; background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%); border:none;">
                                <i class="fas fa-user-plus me-2"></i> Kayıt Ol
                            </button>

                            <div class="text-center mt-4">
                                <p class="mb-0 text-muted small">
                                    Zaten bir hesabınız var mı?
                                    <a href="/Login/Index" class="text-primary fw-bold text-decoration-none">Giriş Yap</a>
                                </p>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
