@using Blogy.Entity.Entities
@inject Microsoft.AspNetCore.Identity.UserManager<AppUser> UserManager
@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="Blogy - Teknoloji ve Yazılım Blogu" />
    <meta name="keywords" content="bootstrap, bootstrap5, blog, teknoloji" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="~/blogy-1.0.0/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/blogy-1.0.0/css/tiny-slider.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/aos.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/glightbox.min.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/style.css">

    <link rel="stylesheet" href="~/blogy-1.0.0/css/flatpickr.min.css">


    <title>Blogy &mdash; Kişisel Blog Sitesi</title>
</head>
<body>

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <nav class="site-nav">
        <div class="container">
            <div class="menu-bg-wrap">
                <div class="site-navigation">
                    <div class="row g-0 align-items-center">
                        <div class="col-2">
                            <a href="/Default/Index" class="logo m-0 float-start">Blogy<span class="text-primary">.</span></a>
                        </div>
                        <div class="col-8 text-center">
                            <form action="#" class="search-form d-inline-block d-lg-none">
                                <input type="text" class="form-control" placeholder="Ara...">
                                <span class="bi-search"></span>
                            </form>

                            <ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu mx-auto">
                                <li class="active"><a href="/Default/Index">Ana Sayfa</a></li>
                                <li><a href="/About/Index">Hakkımızda</a></li>
                                <li><a href="/Blog/Index">Bloglar</a></li>
                                <li><a href="/Contact/Index">İletişim</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    var user = await UserManager.FindByNameAsync(User.Identity.Name);
                                    var displayName = user != null ? $"{user.FirstName}" : User.Identity.Name;
    
                                    <li class="nav-item">
                                        <a href="#" class="nav-link text-white fw-bold">
                                            Hoşgeldin, @displayName
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Login/LogOut" class="nav-link">Çıkış Yap</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a href="/Login/Index" class="nav-link">Giriş Yap</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Register/Index" class="btn btn-primary ml-2">Kayıt Ol</a>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="col-2 text-end">
                            <a href="#" class="burger ms-auto float-end site-menu-toggle js-menu-toggle d-inline-block d-lg-none light">
                                <span></span>
                            </a>
                            <form action="#" class="search-form d-none d-lg-inline-block">
                                <input type="text" class="form-control" placeholder="Blogda ara...">
                                <span class="bi-search"></span>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    @RenderBody()


    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="widget">
                        <h3 class="mb-4">Hakkımızda</h3>
                        @await Component.InvokeAsync("_FooterAboutComponentPartial")
                    </div> <div class="widget">
                        <h3>Sosyal Medya</h3>
                        @await Component.InvokeAsync("_FooterSocialComponentPartial")

                    </div>
                </div> <div class="col-lg-4 ps-lg-5">
                    <div class="widget">
                        <h3 class="mb-4">Hızlı Erişim</h3>
                        <ul class="list-unstyled float-start links">
                            <li><a href="/About/Index">Hakkımızda</a></li>
                            <li><a href="#">Hizmetler</a></li>
                            <li><a href="#">Vizyon</a></li>
                            <li><a href="#">Misyon</a></li>
                            <li><a href="#">Kullanım Şartları</a></li>
                            <li><a href="#">Gizlilik Politikası</a></li>
                        </ul>
                        <ul class="list-unstyled float-start links">
                            <li><a href="#">İş Ortakları</a></li>
                            <li><a href="#">Kurumsal</a></li>
                            <li><a href="#">Kariyer</a></li>
                            <li><a href="/Blog/Index">Blog</a></li>
                            <li><a href="#">S.S.S</a></li>
                            <li><a href="/Contact/Index">İletişim</a></li>
                        </ul>
                    </div>
                </div> <div class="col-lg-4">
                    <div class="widget">
                        <h3 class="mb-4">Son Yazılar</h3>
                        <div class="post-entry-footer">
                            @await Component.InvokeAsync("_FooterLastBlogsViewComponentPartial")
                        </div>


                    </div>
                </div>
            </div> <div class="row mt-5">
                <div class="col-12 text-center">
                    <p>
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script>. Tüm Hakları Saklıdır. &mdash; Tasarım: <a href="https://untree.co">Untree.co</a>  Dağıtım: <a href="https://themewagon.com">ThemeWagon</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
    </div>


    <script src="~/blogy-1.0.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/blogy-1.0.0/js/tiny-slider.js"></script>

    <script src="~/blogy-1.0.0/js/flatpickr.min.js"></script>


    <script src="~/blogy-1.0.0/js/aos.js"></script>
    <script src="~/blogy-1.0.0/js/glightbox.min.js"></script>
    <script src="~/blogy-1.0.0/js/navbar.js"></script>
    <script src="~/blogy-1.0.0/js/counter.js"></script>
    <script src="~/blogy-1.0.0/js/custom.js"></script>


</body>
</html>
