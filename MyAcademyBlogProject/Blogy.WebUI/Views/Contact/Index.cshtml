@model Blogy.Business.DTOs.ContactDtos.SendMessageDto
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="hero overlay inner-page bg-primary py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center pt-5">
            <div class="col-lg-6">
                <h1 class="heading text-white mb-3" data-aos="fade-up">Bize Ulaşın</h1>
            </div>
            @if (TempData["AiReply"] != null)
            {
                <div class="alert alert-info shadow-sm mt-4 p-4" role="alert" style="border-left: 5px solid #17a2b8;">
                    <h4 class="alert-heading text-dark">
                        <i class="fa fa-check-circle text-success"></i> Mesajınız İletildi!
                    </h4>
                    <hr>
                    <p class="mb-1 text-muted small">Otomatik Asistan Yanıtı:</p>
                    <p class="fst-italic fw-bold text-dark" style="font-size: 1.1rem;">
                        "@TempData["AiReply"]"
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        <div class="row">
            
            <div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                @await Component.InvokeAsync("_AddressContact")
            </div>

            <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }

                <form asp-action="Index" asp-controller="Contact" method="post">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Adınız Soyadınız">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email Adresiniz">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <input type="text" asp-for="Subject" class="form-control" placeholder="Konu">
                            <span asp-validation-for="Subject" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <textarea asp-for="Message" class="form-control" cols="30" rows="7" placeholder="Mesajınız..."></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <input type="submit" value="Mesajı Gönder" class="btn btn-primary">
                        </div>
                    </div>
                </form>
                </div>
        </div>
    </div>
</div>
