@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Yorum Yönetimi";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-success shadow-dark border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center">
                    <h6 class="text-white text-capitalize ps-3">Yorum Listesi</h6>
                    <a href="/Admin/Comment/CreateComment" class="btn btn-white btn-sm me-3">
                        <i class="material-symbols-rounded text-sm me-1">add</i> Yeni Yorum Yap
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-4">Kullanıcı</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Blog Başlığı</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Yorum İçeriği</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tarih</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-3 align-items-center">
                                            @if (item.User != null)
                                            {
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.User.FullName</h6>
                                                    <p class="text-xs text-secondary mb-0">@item.User.Email</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-xs font-weight-bold">Misafir / Bilinmiyor</span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0 px-3">
                                            @(item.Blog != null ? item.Blog.Title : "Blog Silinmiş")
                                        </p>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0 px-3">
                                            @(item.Content.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)
                                        </p>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0 px-3">
                                            @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                        </p>
                                    </td>
                                    <td class="align-middle text-center">
                                        <a href="/Admin/Comment/DeleteComment/@item.Id"
                                           onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?')"
                                           class="btn btn-link text-danger px-3 mb-0">
                                            <i class="material-symbols-rounded text-sm me-2">delete</i>Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
