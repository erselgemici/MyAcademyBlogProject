@model UpdateAddressDto
@{
    ViewData["Title"] = "Adres Güncelle";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<div class="col-12 mt-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">İletişim Bilgisini Güncelle</h6>
        </div>
        <div class="card-body p-3">
            <form method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Adres Detayı</label>
                        <div class="input-group input-group-outline my-3">
                            <input type="text" asp-for="AddressDetail" class="form-control" placeholder="Adres">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Çalışma Saatleri</label>
                        <div class="input-group input-group-outline my-3">
                            <input type="text" asp-for="Description" class="form-control" placeholder="Örn: 09:00 - 18:00">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Telefon</label>
                        <div class="input-group input-group-outline my-3">
                            <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email</label>
                        <div class="input-group input-group-outline my-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Harita URL</label>
                        <div class="input-group input-group-outline my-3">
                            <textarea asp-for="MapLocation" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn bg-gradient-info mt-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>

