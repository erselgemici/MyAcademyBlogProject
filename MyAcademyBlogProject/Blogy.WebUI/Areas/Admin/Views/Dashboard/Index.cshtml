@model Blogy.WebUI.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-fluid py-4">

    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-danger shadow-danger text-center border-radius-xl mt-n4 position-absolute">
                        <i class="material-symbols-rounded opacity-10">article</i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Toplam Blog</p>
                        <h4 class="mb-0">@Model.BlogCount</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                    <p class="mb-0"><span class="text-success text-sm font-weight-bolder">Aktif </span> içerik sayısı</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                        <i class="material-symbols-rounded opacity-10">category</i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Kategoriler</p>
                        <h4 class="mb-0">@Model.CategoryCount</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                    <p class="mb-0"><span class="text-success text-sm font-weight-bolder">Farklı </span> konu başlığı</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-warning shadow-warning text-center border-radius-xl mt-n4 position-absolute">
                        <i class="material-symbols-rounded opacity-10">label</i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Etiketler</p>
                        <h4 class="mb-0">@Model.TagCount</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                    <p class="mb-0">Tanımlı etiket sayısı</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                        <i class="material-symbols-rounded opacity-10">group</i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Kullanıcılar</p>
                        <h4 class="mb-0">@Model.UserCount</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                    <p class="mb-0"><span class="text-success text-sm font-weight-bolder">Kayıtlı </span> üye sayısı</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-6 col-md-6 mt-4 mb-4">
            <div class="card z-index-2">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                    <div class="bg-gradient-success shadow-success border-radius-lg py-3 pe-1">
                        <div class="chart">
                            <canvas id="chart-pie" class="chart-canvas" height="250"></canvas>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="mb-0">Kategori Dağılımı</h6>
                    <p class="text-sm">Hangi kategoride kaç blog yazısı var?</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 mt-4 mb-4">
            <div class="card z-index-2">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg py-3 pe-1">
                        <div class="chart">
                            <canvas id="chart-bar" class="chart-canvas" height="250"></canvas>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="mb-0">Yazar Performansı</h6>
                    <p class="text-sm">En çok içerik üreten ilk 5 yazar</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-4 col-md-6 mt-4 mb-4">
            <div class="card z-index-2 ">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1 text-center">
                        <h6 class="text-white mt-3 mb-0">Son Blog Yazısı</h6>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-0">@Model.LastBlogTitle</h5>
                    <hr />
                    <p class="text-sm">Yayında</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mt-4 mb-4">
            <div class="card z-index-2 ">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                    <div class="bg-gradient-info shadow-info border-radius-lg py-3 pe-1 text-center">
                        <h6 class="text-white mt-3 mb-0">Son Yorum</h6>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-0">"@Model.LastCommentContent"</h5>
                    <hr />
                    <p class="text-sm">İncelendi</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mt-4 mb-4">
            <div class="card z-index-2 ">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg py-3 pe-1 text-center">
                        <h6 class="text-white mt-3 mb-0">Yeni Üye</h6>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-0">@Model.LastUserEmail</h5>
                    <hr />
                    <p class="text-sm">Hoşgeldin!</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Son Eklenen Bloglar (Detaylı)</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Başlık</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Kategori</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Yazar</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tarih</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LastFiveBlogs)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                @if (!string.IsNullOrEmpty(item.CoverImage))
                                                {
                                                    <img src="@item.CoverImage" class="avatar avatar-sm me-3 border-radius-lg" alt="img">
                                                }
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Title</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="text-xs font-weight-bold"> @item.Category.CategoryName </span>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="text-xs font-weight-bold"> @item.Writer.FullName </span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.CreatedDate.ToString("dd.MM.yyyy")</span>
                                        </td>
                                        <td class="align-middle">
                                            <a href="/Blog/BlogDetails/@item.Id" target="_blank" class="text-secondary font-weight-bold text-xs">
                                                Görüntüle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 1. PIE CHART
    var ctx1 = document.getElementById("chart-pie").getContext("2d");
    new Chart(ctx1, {
        type: "pie",
        data: {
            labels: @Html.Raw(Json.Serialize(Model.ChartCategoryNames)),
            datasets: [{
                label: "Blog Sayısı",
                weight: 9,
                cutout: 0,
                tension: 0.9,
                pointRadius: 2,
                borderWidth: 2,
                backgroundColor: ['#e91e63', '#344767', '#fb8c00', '#4caf50', '#1a73e8', '#f44336'],
                data: @Html.Raw(Json.Serialize(Model.ChartCategoryCounts)),
                fill: false
            }],
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'bottom',
                    labels: { color: '#344767' }
                }
            }
        },
    });

    // 2. BAR CHART
    var ctx2 = document.getElementById("chart-bar").getContext("2d");
    new Chart(ctx2, {
        type: "bar",
        data: {
            labels: @Html.Raw(Json.Serialize(Model.ChartWriterNames)),
            datasets: [{
                label: "Yazı Sayısı",
                tension: 0.4,
                borderWidth: 0,
                borderRadius: 4,
                borderSkipped: false,
                backgroundColor: "rgba(255, 255, 255, 0.8)",
                data: @Html.Raw(Json.Serialize(Model.ChartWriterCounts)),
                maxBarThickness: 40
            }],
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: {
                y: {
                    grid: {
                        drawBorder: false,
                        display: true,
                        drawOnChartArea: true,
                        drawTicks: false,
                        borderDash: [5, 5],
                        color: 'rgba(255, 255, 255, .2)'
                    },
                    ticks: {
                        suggestedMin: 0,
                        beginAtZero: true,
                        padding: 10,
                        font: { size: 14, weight: 300, family: "Roboto", style: 'normal', lineHeight: 2 },
                        color: "#fff"
                    },
                },
                x: {
                    grid: {
                        drawBorder: false,
                        display: true,
                        drawOnChartArea: true,
                        drawTicks: false,
                        borderDash: [5, 5],
                        color: 'rgba(255, 255, 255, .2)'
                    },
                    ticks: {
                        display: true,
                        color: '#f8f9fa',
                        padding: 10,
                        font: { size: 14, weight: 300, family: "Roboto", style: 'normal', lineHeight: 2 },
                    }
                },
            },
        },
    });
</script>
