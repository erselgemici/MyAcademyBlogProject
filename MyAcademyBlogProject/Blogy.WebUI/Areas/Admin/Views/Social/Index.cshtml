@model List<ResultSocialDto>
@{
    ViewData["Title"] = "Sosyal Medya";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<div class="card my-4 mx-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex justify-content-between">
            <h6 class="text-white ps-3">Sosyal Medya Hesapları</h6>
            <a href="/Admin/Social/CreateSocial" class="btn btn-white btn-sm me-3">Yeni Ekle</a>
        </div>
    </div>
    <div class="card-body px-0 pb-2">
        <table class="table align-items-center mb-0">
            <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-4">Platform</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Link</th>
                    <th class="text-secondary opacity-7"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex px-3 align-items-center">
                                <i class="@item.Icon text-lg me-2"></i>
                                <h6 class="mb-0 text-sm">@item.Name</h6>
                            </div>
                        </td>
                        <td><p class="text-xs font-weight-bold mb-0 px-3">@item.Url</p></td>
                        <td class="align-middle text-center">
                            <a href="/Admin/Social/UpdateSocial/@item.Id" class="btn btn-link text-dark px-3 mb-0"><i class="material-symbols-rounded text-sm me-2">edit</i>Düzenle</a>
                            <a href="/Admin/Social/DeleteSocial/@item.Id" onclick="return confirm('Silmek istediğine emin misin?')" class="btn btn-link text-danger px-3 mb-0"><i class="material-symbols-rounded text-sm me-2">delete</i>Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

