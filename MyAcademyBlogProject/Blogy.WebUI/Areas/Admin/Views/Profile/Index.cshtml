<div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4">
        <span class="mask bg-gradient-dark opacity-6"></span>
    </div>

    <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 mb-2">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="profile_image" class="w-100 border-radius-lg shadow-sm" style="object-fit: cover; height: 74px;">
                    }
                    else
                    {
                        <img src="~/material-dashboard-master/assets/img/bruce-mars.jpg" class="w-100 border-radius-lg shadow-sm">
                    }
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">
                        @Model.FirstName @Model.LastName
                    </h5>
                    <p class="mb-0 font-weight-normal text-sm">
                        @(string.IsNullOrEmpty(Model.Title) ? "Yönetici" : Model.Title)
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-xl-12">
                <div class="card card-plain h-100">
                    <div class="card-header pb-0 p-3">
                        <div class="row">
                            <div class="col-md-8 d-flex align-items-center">
                                <h6 class="mb-0">Profil Bilgileri</h6>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-3">
                        <form method="post" enctype="multipart/form-data">

                            <div class="mb-4">
                                <label class="form-label fw-bold text-dark">Profil Fotoğrafını Değiştir</label>
                                <div class="input-group input-group-outline">
                                    <input type="file" asp-for="ImageFile" class="form-control">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold text-dark">Ad</label>
                                    <div class="input-group input-group-outline mb-3 is-filled">
                                        <input type="text" asp-for="FirstName" class="form-control" value="@Model.FirstName">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold text-dark">Soyad</label>
                                    <div class="input-group input-group-outline mb-3 is-filled">
                                        <input type="text" asp-for="LastName" class="form-control" value="@Model.LastName">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold text-dark">Email</label>
                                    <div class="input-group input-group-outline mb-3 is-filled">
                                        <input type="email" asp-for="Email" class="form-control" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold text-dark">Telefon</label>
                                    <div class="input-group input-group-outline mb-3 is-filled">
                                        <input type="text" asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold text-dark">Kullanıcı Adı</label>
                                    <div class="input-group input-group-outline mb-3 is-filled">
                                        <input type="text" asp-for="UserName" class="form-control" value="@Model.UserName">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold text-dark">Unvan</label>
                                    <div class="input-group input-group-outline mb-3 is-filled">
                                        <input type="text" asp-for="Title" class="form-control" value="@Model.Title">
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-md-12">
                                    <div class="alert alert-info text-white" role="alert" style="background-image: none;">
                                        <small><i class="material-symbols-rounded text-sm me-2">lock</i> Güvenlik gereği bilgilerinizi güncellemek için mevcut şifrenizi girmelisiniz.</small>
                                    </div>
                                    <label class="form-label fw-bold text-danger">Mevcut Şifreniz (Onay İçin Gerekli)</label>
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="password" asp-for="CurrentPassword" class="form-control" required>
                                    </div>
                                    <span asp-validation-for="CurrentPassword" class="text-danger text-xs"></span>
                                </div>
                            </div>

                            <div class="text-danger mb-3">
                                @Html.ValidationSummary(true)
                            </div>

                            <button type="submit" class="btn bg-gradient-dark btn-lg w-100">Bilgileri Güncelle</button>
                            <a href="/Admin/ChangePassword/Index" class="btn btn-outline-primary btn-lg w-100">
                                <i class="material-symbols-rounded text-sm me-2">key</i> Sadece Şifremi Değiştir
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
