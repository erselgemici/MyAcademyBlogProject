@model Blogy.Business.DTOs.UserDtos.ChangePasswordDto

@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-200 border-radius-xl mt-4">
        <span class="mask bg-gradient-dark opacity-6"></span>
    </div>

    <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 mb-2">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative bg-gradient-dark border-radius-xl">
                    <i class="material-symbols-rounded text-white text-xl" style="font-size: 2rem; margin: 12px;">lock_reset</i>
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">Şifre Yenileme</h5>
                    <p class="mb-0 font-weight-normal text-sm">Hesap güvenliğiniz için şifrenizi güncelleyin</p>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12 col-md-8 mx-auto">
                <div class="card card-plain">
                    <div class="card-body p-3">

                        <form method="post">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-dark">Mevcut Şifreniz</label>
                                <div class="input-group input-group-outline">
                                    <input type="password" asp-for="CurrentPassword" class="form-control" required>
                                </div>
                                <span asp-validation-for="CurrentPassword" class="text-danger text-xs"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold text-dark">Yeni Şifre</label>
                                    <div class="input-group input-group-outline">
                                        <input type="password" asp-for="NewPassword" class="form-control" required>
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger text-xs"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold text-dark">Yeni Şifre (Tekrar)</label>
                                    <div class="input-group input-group-outline">
                                        <input type="password" asp-for="ConfirmPassword" class="form-control" required>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger text-xs"></span>
                                </div>
                            </div>

                            <div class="text-danger mb-3 text-center">
                                @Html.ValidationSummary(true)
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/Admin/Profile/Index" class="btn btn-outline-secondary">İptal</a>
                                <button type="submit" class="btn bg-gradient-dark px-5">Şifreyi Güncelle</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
