@model Blogy.Business.DTOs.UserDtos.ChangePasswordDto

@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">
                <i class="typcn typcn-lock-closed menu-icon"></i> Şifre Yenileme
            </h4>
            <p class="card-description">
                Hesap güvenliğiniz için şifrenizi buradan yenileyebilirsiniz.
            </p>

            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label class="font-weight-bold text-dark">Mevcut Şifreniz</label>
                    <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Şu an kullandığınız şifre">
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold text-dark">Yeni Şifre</label>
                    <input type="password" class="form-control" asp-for="NewPassword" placeholder="Yeni şifreniz">
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold text-dark">Yeni Şifre Tekrar</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Yeni şifrenizi tekrar girin">
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(true)
                    </div>
                }

                <button type="submit" class="btn btn-primary mr-2">Şifreyi Güncelle</button>
                <a href="/Writer/Profile/Index" class="btn btn-light">İptal</a>

            </form>
        </div>
    </div>
</div>
