@model Blogy.Business.DTOs.UserDtos.EditProfileDto

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body text-center">

                <h4 class="card-title text-left mb-4">Profil Bilgilerim</h4>

                <div class="mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Profil" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; border: 4px solid #f3f3f3;" />
                    }
                    else
                    {
                        <img src="~/writer/assets/images/faces/face1.jpg" alt="Varsayılan" style="width: 150px; border-radius: 50%;" />
                    }
                </div>

                <h3 class="font-weight-bold text-dark">@Model.FirstName @Model.LastName</h3>
                <p class="text-muted mb-4">@@@Model.UserName</p>

                <div class="row justify-content-center text-left">
                    <div class="col-md-8">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="font-weight-bold text-dark">Email Adresi:</span>
                                <span class="text-muted">@Model.Email</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="font-weight-bold text-dark">Telefon:</span>
                                <span class="text-muted">@(Model.PhoneNumber ?? "Belirtilmemiş")</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mt-5">
                    <a href="/User/Profile/EditProfile" class="btn btn-primary btn-lg mr-2">
                        <i class="typcn typcn-edit"></i> Bilgileri Düzenle
                    </a>

                    <a href="/User/ChangePassword/Index" class="btn btn-warning btn-lg">
                        <i class="typcn typcn-lock-closed"></i> Şifre Değiştir
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
